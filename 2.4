#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <stdbool.h>

#define SIZE 100

int main()
{
    int n;
    int a[SIZE][SIZE];
    printf("Enter N: ");
    scanf("%d", &n);
    srand(time(0));
    if (n <= 0 || n > SIZE)
    {
        printf("N is out of range");
        return -1;
    }
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            a[i][j] = rand() % abs(pow(n, 2)) % 10;
            printf("%d ", a[i][j]);
        }
        printf("\n");
    }
    printf("\n");
    int max = a[n / 2][n / 2], min = a[0][0];
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if ((i + j >= n / 2) && (i + j <= 3 * n / 2))
            {
                if (a[i][j] > max)
                {
                    max = a[i][j];
                }
            }
            else
            {
                if (a[i][j] < min)
                {
                    min = a[i][j];
                }
            }

        }
    }
    printf("Max = %d\n", max);
    printf("Min = %d", min);
    printf("\n");
    return 0;
}
